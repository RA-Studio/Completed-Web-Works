      h1.general__title О компании
      .about-ship
        img(src="assets/images/ship.png", alt="ship").about-ship__img
        img(src="assets/images/ship1.png", alt="ship1").about-ship__img
        .about-ship-desc.about-ship-desc_1
          img(src="assets/images/dot.svg", alt="")
